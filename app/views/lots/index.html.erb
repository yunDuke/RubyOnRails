 <%= form_tag search_path, method: :get do %>
    <%= text_field_tag :search, params[:search], placeholder: "input what you want" %>
    <center>
       <% end %>
  <input class="btn btn-large btn-primary" name="commit" type="submit" value="Search">
    </center>
<table class="table table-striped">
  <thead>
    <tr>

      <th>Title</th>
      <th>description</th>
      <th>parking space</th>
      <th>image</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lots.each do |lot| %>
      <tr>
        <td><%= lot.title %></td>
        <td><%= lot.description %></td>
        <td><%= lot.num %></td>
        <td><%= image_tag(lot.image) %></td>
        
        <td><%= link_to 'Show', lot %></td>
        <td><%= link_to 'Edit', edit_lot_path(lot) %></td>
        <td><%= link_to 'Delete', lot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<center>
<%= link_to 'New Lot', new_lot_path ,class: "btn btn-large btn-primary"%>
</center>




